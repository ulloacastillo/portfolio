---
const { title, className } = Astro.props
---

<section class=`max-w-[80vw] mx-auto my-0 py-2 mb-6 ${className}`>
  {
    title && (
      <h2 class='text-4xl mb-6 inline-flex animate-background-shine bg-[linear-gradient(110deg,#ddd,45%,#eee,55%,#939393)] bg-[length:250%_100%] bg-clip-text  text-transparent'>
        {title}
      </h2>
    )
  }
  <slot />
</section>
